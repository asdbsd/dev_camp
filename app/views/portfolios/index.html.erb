<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>


<% @portfolio_items.each do |p| %>
  <h3><%= link_to p.title, portfolio_path(p) %></h3>  
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image unless p.thumb_image.nil? %>
  <p><%= link_to "Edit", edit_portfolio_path(p) %></p>
<% end %>