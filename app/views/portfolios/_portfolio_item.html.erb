<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <% unless portfolio_item.thumb_image.nil? %>
      <%= image_tag portfolio_item.thumb_image, class: 'card-img-top' %>
    <% end %>

    <div class="card-body">
      <h3><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h3>
      <p class="card-text"><%= portfolio_item.body %></p>  
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <% if logged_in?(:site_admin) %>
            <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: 'btn btn-sm btn-outline-secondary' %>
            <%= link_to "Delete", portfolio_path(portfolio_item), method: :delete, data: { confirm: "are you sure you want to delete this portfolio item?" }, class: 'btn btn-sm btn-outline-secondary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>